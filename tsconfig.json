{
    "compilerOptions": {
      "target": "ES6",
      "module": "ES2020",
      "esModuleInterop": true,
      "sourceMap": true,
      "outDir": "dist",
      "rootDir": "src",
      "moduleResolution": "node16",
      "resolveJsonModule": true,
      "declaration": true,
      "resolvePackageJsonImports": true,
      "strict": true
    },
    "include": [
      "src/**/*"
    ],
    "exclude": [
      "node_modules",
      "dist",
      "*.cjs"
    ]
  }
  