{
    "compilerOptions": {
      "target": "ES5",
      "module": "commonjs",
      "esModuleInterop": true,
      "sourceMap": true,
      "outDir": "dist",
      "rootDirs": [
        ".",
        "src"
      ],
      "moduleResolution": "node16",
      "resolveJsonModule": true,
      "declaration": true,
      "resolvePackageJsonImports": true,
      "strict": true
    },
    "include": [
      "src/**/*",
      "package.json"
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }
  