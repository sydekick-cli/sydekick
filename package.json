{
  "name": "sydekick",
  "version": "1.0.0-alpha.3",
  "description": "",
  "private": true,
  "scripts": {
    "bootstrap": "npm install && lerna bootstrap && npm run build",
    "build": "tsc -b -v && lerna run build",
    "clean-all": "npm run clean-build && npm run clean-node-modules",
    "clean-build": "rimraf packages/*/dist; rimraf packages/**/*.tsbuildinfo",
    "clean-node-modules": "rimraf packages/**/node_modules; rimraf node_modules",
    "dev": "npm-run-all -l -p --parallel dev:*",
    "dev:tsc": "tsc -b -v -w",
    "link": "lerna run link",
    "lint": "lerna run lint",
    "publish": "lerna publish from-package --yes",
    "refresh": "npm run clean-all && npm run bootstrap"
  },
  "keywords": [],
  "license": "MIT",
  "devDependencies": {
    "lerna": "^6.6.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "author": "Seth Lessard <sethlessard@outlook.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/feedmefries/sidekick.git"
  },
  "bugs": {
    "url": "https://github.com/feedmefries/sidekick/issues"
  },
  "homepage": "https://github.com/feedmefries/sidekick#readme"
}
