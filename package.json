{
  "name": "sk",
  "version": "1.0.0",
  "description": "",
  "scripts": {
    "bootstrap": "npm install && lerna bootstrap && npm run build",
    "build": "tsc -b -v && lerna run build",
    "dev": "npm-run-all -l -p --parallel dev:*",
    "dev:tsc": "tsc -b -v -w",
    "link": "lerna run link",
    "clean-all": "npm run clean-build && npm run clean-node-modules",
    "clean-build": "rimraf packages/*/dist; rimraf packages/**/*.tsbuildinfo",
    "clean-node-modules": "rimraf node_modules; rimraf packages/**/node_modules",
    "lint": "eslint . --ext .ts",
    "refresh": "npm run clean-all && npm run bootstrap"
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.57.1",
    "@typescript-eslint/parser": "^5.57.1",
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "lerna": "^6.6.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  },
  "workspaces": [
    "packages/*"
  ]
}
