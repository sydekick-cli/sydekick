{
  "name": "sydekick",
  "version": "1.0.0-alpha.3",
  "description": "",
  "private": true,
  "scripts": {
    "bootstrap": "npm install && npm run build:tsc:support && npm run build:ensure-projects && lerna bootstrap && npm run build && npm run link",
    "build": "npm run build:tsc && npm run build:lerna",
    "build:tsc": "tsc -b -v",
    "build:tsc:support": "tsc -p ./support/tsconfig.json",
    "build:ensure-projects": "node ./support/.dist/build/ensure-projects.js",
    "build:lerna": "lerna run build",
    "clean-all": "npm run clean-build && npm run clean-node-modules",
    "clean-build": "rimraf packages/*/dist; rimraf packages/**/*.tsbuildinfo",
    "clean-node-modules": "rimraf packages/**/node_modules; rimraf node_modules",
    "dev": "npm-run-all -l -p dev:build",
    "dev:bootstrap": "nodemon --ext ts -w packages/ -i '**/dist/**' -i '**/node_modules/**' --exec 'clear; npm run clean-build; npm run bootstrap || exit 1'",
    "dev:build": "npm-run-all -l -p dev:build:*",
    "dev:build:tsc": "tsc -b -v -w",
    "dev:build:tsc:support": "tsc -p ./support/tsconfig.json -w",
    "link": "cd packages/app-cli; npm link; cd ../../",
    "lint": "lerna run lint",
    "publish": "lerna publish from-package --yes",
    "refresh": "npm run clean-all && npm run bootstrap"
  },
  "keywords": [],
  "license": "MIT",
  "devDependencies": {
    "@types/debug": "^4.1.7",
    "@types/glob": "^8.1.0",
    "debug": "^4.3.4",
    "glob": "^9.3.4",
    "lerna": "^6.6.1",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.8.7",
    "rimraf": "^4.4.1",
    "ts-morph": "^18.0.0",
    "ts-node": "^10.9.1",
    "typescript": "^5.0.3"
  },
  "workspaces": [
    "packages/*"
  ],
  "author": "Seth Lessard <sethlessard@outlook.com>",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/feedmefries/sidekick.git"
  },
  "bugs": {
    "url": "https://github.com/feedmefries/sidekick/issues"
  },
  "homepage": "https://github.com/feedmefries/sidekick#readme",
  "dependencies": {}
}